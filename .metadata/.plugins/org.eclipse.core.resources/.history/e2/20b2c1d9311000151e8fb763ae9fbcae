#ifndef IMAGE_H_
#define IMAGE_H_
#include <GL/glew.h>
class Image {
public:
	Image();
	virtual ~Image();

	void loadBMP(const char * imagepath);
	GLenum format;
	unsigned int width, height;
	unsigned int imageSize;   // = width*height*3
	unsigned char * data;// Actual RGB data
protected:

};

#endif /* IMAGE_H_ */
