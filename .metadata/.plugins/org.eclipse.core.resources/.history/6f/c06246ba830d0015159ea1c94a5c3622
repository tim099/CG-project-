#version 400 core

layout(triangles)in;
layout(triangle_strip,max_vertices=4)out;
in VertexData {
    vec2 UV;
    vec3 Normal;
    vec3 position;
}vertout[3];

out VertexData {
    vec2 UV;
    vec3 Normal;
    vec3 position;
}vert;
uniform sampler2D myTextureSampler;
void main(){
	for(int i=0;i<3;i++){
		//vec3 tex_color=(texture(myTextureSampler,vertout[i].UV).rgb);
		gl_Position=gl_in[i].gl_Position;//;
		vert.UV=vertout[i].UV;
		vert.Normal=vertout[i].Normal;
		vert.position=vertout[i].position;
		EmitVertex();
	}
	
	vert.UV=vertout[2].UV;
	vert.Normal=vertout[2].Normal;
	vert.position=vertout[2].position;
	gl_Position=(gl_in[0].gl_Position+vec4(0.1,0.1,0.1);
	EmitVertex();
	
	EndPrimitive();
	
}  