#ifndef TEXTURE2D_H_
#define TEXTURE2D_H_
#include "class/texture/texture.h"
class Image;
class Texture2D : public Texture {
public:
	Texture2D(GLuint TexID,int width,int height);
	virtual ~Texture2D();
	virtual Texture2D* Tex2D();
	virtual void usetexture(GLuint programID,int num,const char *name)const;
	Image* convert_to_image();
	int width,height;
protected:

};

#endif /* TEXTURE2D_H_ */
