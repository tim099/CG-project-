#version 400 core

layout(location = 0) in vec3 vertexPosition;
layout(location = 1) in vec2 vertexUV;
layout(location = 2) in vec3 vertexNormal;

out VertexData {
    vec2 UV;
    vec3 Normal;
    vec3 position;
}vert;

uniform mat4 VP;
uniform mat4 M; 

void main(){ 
	vert.position=(M*vec4(vertexPosition,1)).xyz;//real world pos
	vert.Normal=(M*vec4(vertexNormal,0)).xyz;
    vert.UV = vertexUV;
    gl_Position=VP*vec4(vert.position,1);    

}