#version 400 core

layout(triangles)in;
layout(triangle_strip,max_vertices=3)out;
in VertexData {
    vec2 UV;
    vec3 Normal;
    vec3 position;
}vertout[3];

out VertexData {
    vec2 UV;
    vec3 Normal;
    vec3 position;
}vert;
void main(){
	for(int i=0;i<3;i++){
		gl_Position=gl_in[i].gl_Position+vec4(0.1,0,0,0);
		vert.UV=vertout[i].UV;
		vert.Normal=vertout[i].Normal;
		vert.position=vertout[i].position;
		EmitVertex();
	}
	EndPrimitive();
	
}  