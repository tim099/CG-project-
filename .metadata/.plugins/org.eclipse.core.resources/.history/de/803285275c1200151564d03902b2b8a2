#include "class/uniform/Uniform.h"
#include "class/tim/string/String.h"
#include <cstring>
Uniform::Uniform() {

}
Uniform::~Uniform() {

}
void Uniform::sentMat4Arr(GLuint programID,glm::mat4* MatArr,int num,char* name){
	Tim::String::gen_array_num(name+strlen(name),0);
	GLuint UNI=glGetUniformLocation(programID,name);
	for(int i=0;i<num;i++){
		glUniformMatrix4fv(UNI+i,1,GL_FALSE,&((MatArr[i])[0][0]));
	}
}
