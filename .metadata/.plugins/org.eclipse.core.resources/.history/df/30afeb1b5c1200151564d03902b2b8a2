#include "class/uniform/Uniform.h"

Uniform::Uniform() {

}
Uniform::~Uniform() {

}
void Uniform::sentMat4Arr(GLuint programID,glm::mat4* MatArr,int num,const char* name){
	GLuint UNI=glGetUniformLocation(programID,name);
	for(int i=0;i<num;i++){
		glUniformMatrix4fv(UNI+i,1,GL_FALSE,&((MatArr[i])[0][0]));
	}
}
