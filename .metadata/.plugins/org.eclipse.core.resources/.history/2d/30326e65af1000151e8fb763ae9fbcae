#ifndef TEXTURE_H_
#define TEXTURE_H_
#include <GL/glew.h>
#include <glm/glm.hpp>
#include <class/texture/Image.h>
const int TEXTURE_BMP=1;

const int P_NONE=0;
const int P_MipMap=1;
const int P_Linear=2;
const int P_Nearest=3;
class Texture {
public:
	Texture();
	virtual ~Texture();
	static Texture* loadBMP(const char * imagepath,int Parameteri=P_MipMap);
	static Texture* loadBMP_to_sobel(const char * imagepath,int Parameteri=P_MipMap);

	static void usetexture(GLuint programID,Texture* tex,int num,const char *name
			,GLenum target=GL_TEXTURE_2D);
	static void usetextureArr(GLuint programID,,Texture* tex ,int num,int tex_num,const char *name);
	static Texture* gen_texture(const void *pixels,GLsizei width,GLsizei height,GLint internalformat,GLenum format
			,GLenum type=GL_UNSIGNED_BYTE,int Parameteri=P_MipMap);
	static Texture* gen_texture(Image* image,GLint internalformat,
			GLenum type=GL_UNSIGNED_BYTE,int Parameteri=P_MipMap);
	static void draw_texture(GLuint tex,GLuint shader2D,double winaspect=1.0,double texaspect=1.0,GLfloat alpha=1.0,
			glm::vec3 pos=glm::vec3(0,0,0),double size=1.0);
	static void convert_to_sobel(Image* image);
	GLuint TexID;
protected:
	static GLuint gen_texture_vertex(GLfloat width,GLfloat height,glm::vec3 pos=glm::vec3(0,0,0));
};

#endif /* TEXTURE_H_ */
